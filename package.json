{
  "name": "md-toc-generator",
  "version": "1.0.0",
  "description": "Recursively generate table of contents for all markdown files in a repository with gitignore-style filtering",
  "main": "dist/index.js",
  "bin": {
    "md-toc": "./dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NishKebab/md-toc.git"
  },
  "homepage": "https://github.com/NishKebab/md-toc#readme",
  "bugs": {
    "url": "https://github.com/NishKebab/md-toc/issues"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "prepare": "npm run build"
  },
  "keywords": [
    "markdown",
    "toc",
    "table-of-contents",
    "documentation",
    "cli",
    "recursive",
    "generator",
    "doctoc",
    "gitignore",
    "typescript"
  ],
  "author": "NishKebab",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "ignore": "^5.3.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}